<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>Eat-Da-Burger</h1>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers To Eat</h2>
            <br>
            <ul>
                {{#each burgers}}
                {{#unless eaten}}
                {{> burgers/burger-block eaten=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Burgers Eaten</h2>
            <br>
            <ul>
                {{#each burgers}}
                {{#if eaten}}
                {{> burgers/burger-block eaten=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">

            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>